#!/bin/sh
if ! head -1 "$1" | grep -qE "^(feat|fix|chore|build|docs|test|style|refactor|perf|ci|revert|init)(\(.+?\))?: .{1,}$"; then
    echo "Aborting commit. Your commit message is invalid. See https://www.conventionalcommits.org/en/v1.0.0/" >&2
    exit 1
fi
if ! head -1 "$1" | grep -qE "^.{1,88}$"; then
    echo "Aborting commit. Your commit message is too long." >&2
    exit 1
fi
